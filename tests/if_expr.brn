import assert

def sign(n) -> if n > 0 then "positive" else if n < 0 then "negative" else "zero" end

assert_equals("if expr positive", sign(7), "positive")
assert_equals("if expr negative", sign(-3), "negative")
assert_equals("if expr zero", sign(0), "zero")
assert_equals("if expr direct true", if true then 1 else 2 end, 1)
assert_equals("if expr direct false", if false then 1 else 2 end, 2)
