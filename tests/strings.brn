import strings
import assert

assert_equals("split",split("a.b.c", "."), ["a", "b", "c"])
assert_equals("char_at",char_at("hello", 1), 'e')
assert_equals("substring",substring("hello world", 0, 5), "hello")
assert_equals("to_upper",to_upper("Hello World!"), "HELLO WORLD!")
assert_equals("to_lower",to_lower("Hello World!"), "hello world!")
assert_equals("trim",trim("   \n\t Hello World! \t\n  "), "Hello World!")
assert_equals("contains true",contains("hello world", "lo wo"), true)
assert_equals("contains false",contains("hello world", "world!s"), false)
assert_equals("replace",replace("the cat sat on the mat", "the", "a"), "a cat sat on a mat")
assert_equals("starts_with true",starts_with("hello world", "hello"), true)
assert_equals("starts_with false",starts_with("hello world", "world"), false)
assert_equals("ends_with true",ends_with("hello world", "world"), true)
assert_equals("ends_with false",ends_with("hello world", "hello"), false)
assert_equals("length string", length("bern"), 4)
assert_equals("length empty string", length(""), 0)
assert_equals("append", append(['H','e','l','l','o'], [' ','W','o','r','l','d','!']), "Hello World!")
assert_equals("to_int", to_int("4567"), 4567)
assert_equals("to_int leading zeros", to_int("000123"), 123)
assert_equals("to_int single digit", to_int("7"), 7)
